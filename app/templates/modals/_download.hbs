{{#view Balanced.ModalView id="download-confirm" close_event="closeDownload"}}
    <form>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">Ã—</button>
            <h2>Export data</h2>
        </div>
        <div class="modal-body">
            <p class="body2a">A CSV file of your current data set will be sent to:</p>
            <label>Email</label>
            {{view Ember.TextField valueBinding="email_address" type="email" class="full"}}
        </div>
        <div class="modal-footer">
            <button class="btn danger" data-dismiss="modal" aria-hidden="true">Close</button>
            <button class="btn" {{action download}}>Export</button>
        </div>
    </form>
{{/view}}

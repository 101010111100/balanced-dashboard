{{#view Balanced.ModalView id="pay-seller" close_event="closePaySellerModal"}}
    <form {{action "paySeller" on="submit"}}>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h2>Pay a seller</h2>
    </div>
    <div class="modal-body">
        <div {{bindAttr class=":control-group pay_seller_model.validationErrors.name:error"}}>
            <label>Account holder's name</label>
            {{view Ember.TextField valueBinding="pay_seller_model.bank_account.name" class="full"}}
        </div>

        <div {{bindAttr class=":control-group pay_seller_model.validationErrors.routing_number:error"}}>
            <label>Routing Number</label>
            {{view Ember.TextField valueBinding="pay_seller_model.bank_account.routing_number" class="full"}}
        </div>

        <div {{bindAttr class=":control-group pay_seller_model.validationErrors.account_number:error"}}>
            <label>Account number</label>
            {{view Ember.TextField valueBinding="pay_seller_model.bank_account.account_number" class="full"}}
        </div>

        <div {{bindAttr class=":control-group pay_seller_model.validationErrors.type:error"}}>
            <label>Account type</label>
            {{view Ember.Select
                   contentBinding="Balanced.BANK_ACCOUNT_TYPES"
                   optionValuePath="content.value"
                   optionLabelPath="content.label"
                   valueBinding="pay_seller_model.bank_account.type"
            }}
        </div>

        <div {{bindAttr class=":control-group pay_seller_model.validationErrors.amount:error"}}>
            <label>Amount</label>
            <div class="input-prepend">
                <span class="add-on">$</span>
                {{view Ember.TextField valueBinding="pay_seller_amount_dollars" class="span3"}}
            </div>
        </div>

        <div {{bindAttr class=":control-group pay_seller_model.validationErrors.description:error"}}>
            <label>Description</label>
            {{view Ember.TextField valueBinding="pay_seller_model.description" class="full"}}
        </div>
    </div>
    <div class="modal-informational">
        <img src="images/bank-account-instructions.png" alt="Bank Account Instructions" class="modal-informational-content"/>
    </div>
    <div class="modal-footer">
        <button class="btn danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button class="btn" {{action paySeller}}>Credit</button>
    </div>
    </form>
{{/view}}

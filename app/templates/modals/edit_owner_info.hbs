<div class="modal hide" id="edit-owner-info">
    <form {{action "save" on="submit" target="view"}}>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h2>Edit owner info</h2>
    </div>
    <div class="modal-body">
        {{ partial "modals/modalErrors" }}

        <div {{bindAttr class=":control-group view.model.validationErrors.name:error"}}>
            <label>Name</label>
            {{view Ember.TextField valueBinding="view.model.name" name="name" class="full"}}
        </div>

        <div {{bindAttr class=":control-group view.model.validationErrors.email:error"}}>
            <label>Email</label>
            {{view Ember.TextField valueBinding="view.model.email" name="email" class="full"}}
        </div>

        <div {{bindAttr class=":control-group view.model.validationErrors.phone:error"}}>
            <label>Phone number</label>
            {{view Ember.TextField valueBinding="view.model.phone" name="phone" class="full"}}
        </div>
    </div>
    <div class="modal-footer">
        {{view Balanced.ModalActionButtonsView submitTitle="Save" submittingTitle="Saving..."}}
    </div>
    </form>
</div>

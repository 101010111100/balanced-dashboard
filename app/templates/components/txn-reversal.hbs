<div class="reversal">
  <div class="main-header transaction-type-subheader">
    <div class="row">
      <div class="span2 border-adjust label">
        <span class="subhead2d">Reversal</span>
      </div>
      <div class="span14 title">
        <span class="transaction-description subhead2d">Created: ${{reversal.amount_dollars}}</span>
      </div>
      <div class="span4 border-adjust buttons">
      </div>
    </div>
  </div>
  <div class="transaction-body">
    <div class="row">
      <div class="span2 border-adjust"></div>
      <div class="span18 border-adjust">
        <div class="row-fluid">
          <div class="span13">
            <section class="transaction-info">
              <div class="form-horizontal key-value-display">
                <header>
                  <h3>Reversal
                    {{edit-transaction-modal transaction=reversal}}
                  </h3>
                </header>
                <div>
                  <div class="control-group">
                    <label class="control-label">Created</label>
                    <div class="controls">
                      <span class="inline-label">{{humanReadableDateLong reversal.created_at }}</span>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">Description</label>
                    <div class="controls">
                      <span class="inline-label">{{ reversal.description }}</span>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">ID</label>
                    <div class="controls">
                      <span class="inline-label">{{ reversal.id }}</span>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">Txn #</label>
                    <div class="controls">
                      <span class="inline-label">{{ reversal.transaction_number }}</span>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            {{txn-funding-instrument funding_instrument=reversal.credit.bank_account}}
          </div>
          <div class="span13">

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

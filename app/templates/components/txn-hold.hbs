<div class="hold">
  <div class="main-header transaction-type-subheader">
    <div class="row">
      <div class="span2 border-adjust label">
        <span class="subhead2d">Hold</span>
      </div>
      <div class="span10 title">
        <span class="transaction-description subhead2d">{{capitalize hold.hold_status}}: ${{hold.amount_dollars}}</span>
      </div>
      <div class="span8 border-adjust buttons side-by-side">
        {{#if hold.can_void_or_capture}}
          {{capture-hold-modal hold=hold}}
          {{void-hold-modal hold=hold}}
        {{/if}}
      </div>
    </div>
  </div>
  <div class="transaction-body">
    <div class="row">
      <div class="span2 border-adjust"></div>
      <div class="span18 border-adjust">
        <div class="row-fluid">
          <div class="span13">
            <section class="transaction-info">
              <div class="form-horizontal key-value-display">
                <header>
                  <h3>Authorization
                    {{edit-transaction-modal transaction=hold}}
                  </h3>
                </header>
                <div>
                  <div class="control-group">
                    <label class="control-label">Created</label>
                    <div class="controls">
                      <span class="inline-label">{{humanReadableDateLong hold.created_at }}</span>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">Description</label>
                    <div class="controls">
                      <span class="inline-label">{{ hold.description }}</span>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">ID</label>
                    <div class="controls">
                      <span class="inline-label">{{ hold.id }}</span>
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">Txn #</label>
                    <div class="controls">
                      <span class="inline-label">{{ hold.transaction_number }}</span>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            {{txn-funding-instrument funding_instrument=hold.source}}
          </div>
          <div class="span13">

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

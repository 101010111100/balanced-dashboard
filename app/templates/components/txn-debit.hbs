<div class="debit">
	<div class="main-header transaction-type-subheader">
		<div class="row">
			<div class="span2 border-adjust label">
				<span class="subhead2d">Debit</span>
			</div>
			<div class="span14 title">
				<span class="transaction-description subhead2d">{{titleCase debit.status}}: ${{debit.amount_dollars}}</span>
			</div>
			<div class="span4 border-adjust buttons">
				{{refund-debit-modal debit=debit}}
			</div>
		</div>
	</div>
	<div class="transaction-body">
		<div class="row">
			<div class="span2 border-adjust"></div>
			<div class="span18 border-adjust">
				<div class="row-fluid">
					<div class="span13">
						<section class="transaction-info">
							<form class="form-horizontal edit-inline">
								<header>
									<h3>Debit
										<a href="#" class="edit" {{action edit}}>Edit</a>
									</h3>
								</header>
								<div>
									<div class="control-group">
										<label class="control-label">Created</label>
										<div class="controls">
											<span class="inline-label">{{humanReadableDateLong debit.created_at }}</span>
										</div>
									</div>
									<div class="control-group">
										<label class="control-label">Description</label>
										<div class="controls">
											<span class="inline-label">{{ debit.description }}</span>
										</div>
									</div>
									<div class="control-group">
										<label class="control-label">ID</label>
										<div class="controls">
											<span class="inline-label">{{ debit.id }}</span>
										</div>
									</div>
									<div class="control-group">
										<label class="control-label">Txn #</label>
										<div class="controls">
											<span class="inline-label">{{ debit.transaction_number }}</span>
										</div>
									</div>
								</div>
							</form>
						</section>

						{{txn-funding-instrument funding_instrument=debit.source}}
					</div>
					<div class="span13">

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<header id="header" class="container">
    <div class="row">

        <div id="logo" class="span2">
            <a href="https://www.balancedpayments.com" class="img">Balanced Dashboard</a>
        </div>

        <div id="marketplaces-and-search" class="span18">
            {{#if Balanced.Auth.signedIn }}
                <div id="marketplaces" class="dropdown">
                {{#if Balanced.Auth.isGuest }}
                {{#linkTo claim}}<span id="marketplace-name" class="nav2d">Claim account</span>{{/linkTo}}
                {{else}}
                    <a class="dropdown-toggle"
                       data-toggle="dropdown"
                       href="#">
                            <span id="marketplace-name" class="nav2d">{{#if controllers.marketplace.name}} {{controllers.marketplace.name}} {{else}} Marketplaces {{/if}}</span>
                        <b class="caret"></b>
                    </a>
                    {{ render "marketplaces_list" }}
                {{/if}}
                </div>

                {{#if controllers.marketplace.name}} {{ render "search" }} {{/if}}

            {{/if}}
        </div>

        <div id="site-nav" class="span6">
            <div id="go-live-menu">
                {{#if Balanced.Auth.isGuest}}
                    {{#linkTo marketplaces.apply class="nav1d"}}Production access{{/linkTo}}
                {{/if}}
            </div>
            <div id="docs-menu">
                <a href="https://docs.balancedpayments.com" class="nav1d" target="new">docs</a>
            </div>
            <div id="help-menu">
                <a href="https://www.balancedpayments.com/help" class="nav1d" target="new">help</a>
            </div>
            <div id="user-menu">
                {{#if Balanced.Auth.signedIn }}
                    <a class="nav1d" href="#" {{action "signOut"}}>Log Out</a>
                {{else}}
                    {{#linkTo "login" class="nav1d" }}Login{{/linkTo}}
                {{/if}}
            </div>
        </div>

    </div>
</header>
